Вот пример из последнего. Чтобы запрос на сервер корректный ушёл, нужно преобразовать в стандарт который сервер клиента понимаем

//Счётчик попыток
           $session.tryFlag = 0;
            // Если переменная `phone` равна `null`, присваиваем ей пустую строку
            if ($session.phone == null){
                $session.phone = "";
                }
            // Удаляем все символы, кроме цифр
            $session.phone = String($session.phone).replace(/\D+/g, "");
            // Определяем длину очищенного номера
            var count = $session.phone.length;
            // Проверяем длину номера
            if (count < 10 || count > 11) {
              // Номер некорректный
              $session.tryFlag = 1;
            } else {
              // Длина верна (либо 10, либо 11)
              if (count === 10) {
                // Добавляем префикс "+7"
                $session.phone = "7" + $session.phone;
              } else { // length === 11
                // Берём первую цифру номера
                var first = $session.phone.charAt(0);
                if (first === "8") {
                  // Преобразуем число начинающееся с '8' в международный формат (+7)
                  $session.phone = "7" + $session.phone.slice(1);
                } else if (first === "7") {
                  // Ничего не делаем, сделал потому что хз чё делать, если там другие цифры. В тз ничего не сказано об этом
                } else {
                  // Неправильный первый символ
                  $session.tryFlag = 1;
                }
              }
            }
