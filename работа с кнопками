$flag = 1;
$allClientsRecords = [];
$answer = "";
$httpResponse = 0;
// Создаем объект для хранения данных кнопок
$buttons = {
    button_1: "",
    button_2: "",
    button_3: "",
    button_4: "",
    button_5: ""
};
$buttonCounter = 0;

//Проверяем количество записей клиента к врачу

if($dataThing.result.records.length){
    if($dataThing.result.records.length > 1){
        $answer += "Ваши записи:\n";
    } else {
        $answer += "У вас только одна запись:\n";
    }
//записываем список в отдельный массив, чтобы потом его использовать
    for(var i = 0; i < $dataThing.result.records.length; i++){
        $allClientsRecords.push($dataThing.result.records[i].guids);

// Форматирование даты и времени в читаемый вид
        var startDate = new Date($dataThing.result.records[i].dt_start);
        var endDate = new Date($dataThing.result.records[i].dt_end);
        
// Форматируем дату вручную
        var day = startDate.getDate();
        var month = startDate.getMonth() + 1;
        var year = startDate.getFullYear();
        var startHours = startDate.getHours();
        var startMinutes = startDate.getMinutes();
        var endHours = endDate.getHours();
        var endMinutes = endDate.getMinutes();

// Добавляем ведущие нули
        if (day < 10) day = '0' + day;
        if (month < 10) month = '0' + month;
        if (startHours < 10) startHours = '0' + startHours;
        if (startMinutes < 10) startMinutes = '0' + startMinutes;
        if (endHours < 10) endHours = '0' + endHours;
        if (endMinutes < 10) endMinutes = '0' + endMinutes;
        var formattedStart = day + '.' + month + '.' + year + ', время ' + startHours + ':' + startMinutes;
        var formattedEnd = endHours + ':' + endMinutes;

// Формируем строку с данными для кнопки
        var buttonData = $dataThing.result.records[i].spec_name + " | " + 
                        $dataThing.result.records[i].doc_name + " | " +
                        formattedStart + " - " + formattedEnd;

// Записываем данные в соответствующую переменную кнопки
        $buttons["button_" + (i + 1)] = buttonData;
        $buttonCounter ++;
        $answer += $dataThing.result.records[i].spec_name + "\n Врач " + 
                 $dataThing.result.records[i].doc_name + "\nДата и время приёма" +
                 formattedStart + " - " + formattedEnd + "\n\n";
    }
} else {
    $flag = 0;
    $answer = "у вас нет записи";
  }
